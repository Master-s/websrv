PS5_HOST=
FFPLAY=/data/homebrew/FFplay/ffplay.elf

while getopts "h:" opt; do
    case ${opt} in
	h) PS5_HOST=$OPTARG;;
    esac
done
shift $((OPTIND -1))

if [[ -z $PS5_HOST || -z $1 ]]; then
    echo "Usage: $(basename $0) -h HOST URI" >&2
    exit 1
fi

curl --get \
     --data-urlencode "path=$FFPLAY" \
     --data-urlencode "args=$*" \
     --data-urlencode "pipe=1" \
     http://$PS5_HOST:8080/hbldr

